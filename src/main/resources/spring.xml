<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="ua.training.spring.Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="John Smith"/>
    </bean>

    <bean id="consoleEventLogger" class="ua.training.spring.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="ua.training.spring.FileEventLogger" init-method="init">
        <constructor-arg value="java.lang.String"/>
    </bean>

    <bean id="cachedEventLogger" class="ua.training.spring.CacheFileEventLogger" init-method="init">
        <constructor-arg value="java.lang.String"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="event" class="ua.training.spring.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg value=""/>
    </bean>

    <bean id="app" class="ua.training.spring.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="fileEventLogger"/>
    </bean>

</beans>